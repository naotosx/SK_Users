<mvc:View
    controllerName="chgunlckusers.skc.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <!-- Contenedor principal centrado -->
    <!-- Fondo gris completo --> 
    <VBox
        width="100%"
        height="100%"
        justifyContent="Start"
        alignItems="Center"
    >
        <!-- Panel superior -->
        <VBox
            width="100%"
            class="topPanel"
        >
            <!-- Contenido centrado -->
            <HBox
                justifyContent="Center"
                class="backgroundGray hboxPadding20"
            >
                <VBox width="80%">
                    <!-- Encabezado estilo "SK Converge" -->
                    <HBox alignItems="Center">
                        <Text
                            text="{i18n>title_sk}"
                            class="customTitleSK sapUiTinyMarginEnd"
                            wrapping="false"
                        />
                        <Text
                            text="{i18n>title_conv}"
                            wrapping="false"
                            class="textGray"
                        />
                    </HBox>

                    <Text
                        text="{i18n>title_desc}"
                        class="sapUiSmallMarginTop descriptionTitle"
                    />
                </VBox>
            </HBox>
        </VBox>

        <!-- Contenedor de tarjetas -->
        <HBox
            justifyContent="Center"
            alignItems="Center"
            width="100%"
            class="sapUiSmallMarginTop smallGap"
        >
            <!-- Tarjeta Cambiar Clave SAP -->
            <VBox class="cardBox">
                <Title
                    text="{i18n>cha_pass_sap}"
                    level="H2"
                    class="cardTitle sapUiSmallMarginTop"
                />

                <Label text="{i18n>system}" />
                <Select
                    width="100%"
                    selectedKey="{dataModel>/change_pass_system}"
                    items="{dataModel>/sistemas}"
                >
                    <items>
                        <core:Item
                            key="{dataModel>id}"
                            text="{dataModel>txt}"
                        />
                    </items>
                </Select>
                <Label
                    text="{i18n>enviro}"
                    class="sapUiSmallMarginTop"
                />
                
                <Select
                    width="100%"
                    selectedKey="{dataModel>/change_pass_enviroment}"
                    items="{dataModel>/ambientes}"
                >
                    <items>
                        <core:Item
                            key="{dataModel>id}"
                            text="{dataModel>txt}"
                        />
                    </items>
                </Select>

                <Button
                    text="{i18n>cha_pass}"
                    type="Emphasized"
                    press=".onCambiarClave"
                    class="pushBottom sapUiSmallMarginTop"
                    width="140px"
                />
            </VBox>

            <!-- Tarjeta Desbloquear Clave SAP -->
            <VBox class="cardBox">
                <Title
                    text="{i18n>unclock_sap_pass}"
                    level="H2"
                    class="cardTitle sapUiSmallMarginTop"
                />

                <Label text="{i18n>system}" />
                <Select
                    width="100%"
                    selectedKey="{dataModel>/unlock_system}"
                    items="{dataModel>/sistemas}"
                >
                    <items>
                        <core:Item
                            key="{dataModel>id}"
                            text="{dataModel>txt}"
                        />
                    </items>
                </Select>

                <Label
                    text="{i18n>enviro}"
                    class="sapUiSmallMarginTop"
                />
                <Select
                    width="100%"
                    selectedKey="{dataModel>/unclock_enviroment}"
                    items="{dataModel>/ambientes}"
                >
                    <items>
                        <core:Item
                            key="{dataModel>id}"
                            text="{dataModel>txt}"
                        />
                    </items>
                </Select>

                <Button
                    text="{i18n>unlock_pass}"
                    type="Emphasized"
                    press=".onDesbloquearClave"
                    class="pushBottom sapUiSmallMarginTop"
                    width="140px"
                />
            </VBox>
        </HBox>
    </VBox>
</mvc:View>